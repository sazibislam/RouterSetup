<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/router" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30.0sp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0sp"
            android:gravity="center_horizontal"
            android:text="Router Setup Page"
            android:textSize="40.0sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btPress"
            android:layout_width="300.0sp"
            android:layout_height="80.0sp"
            android:text="Press to Update IP"
            android:textSize="25.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/routerIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0sp"
            android:layout_marginTop="20.0sp"
            android:gravity="center_horizontal"
            android:text="Router IP"
            android:textSize="30.0sp" />

        <Button
            android:id="@+id/bGo"
            android:layout_width="300.0sp"
            android:layout_height="80.0sp"
            android:text="Open Router Page"
            android:textSize="25.0sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Usual login data are:\n User: admin\nPassword: admin"
            android:textSize="15.0sp" />
    </LinearLayout>

